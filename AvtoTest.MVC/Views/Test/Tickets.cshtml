@model AvtoTest.Data.Entities.TestEntities.Ticket

<h2>Tickets</h2>
<form asp-action="Tickets" method="post">
@for(var i = 1; i < 36; i++)
{
  <div class="card">
    <img src="https://www.northcross.org/uploads/1/3/0/7/13077613/s387222896688224800_p1_i1_w500.jpeg" alt="Avatar" style="width:100%">
    <div class="container">
      <h4><b>Ticket @i</b></h4>
      <button asp-route-id="@i" type="submit">Go to Ticket</button>
    </div>
  </div>
}
</form>

<style>
.card {
  box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
  transition: 0.3s;
  width: 40%;
}

.card:hover {
  box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
}

.container {
  padding: 2px 16px;
}
</style>